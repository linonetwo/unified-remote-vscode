<?xml version="1.0" encoding="utf-8"?>
<layout onlaunch="launch">
  <row>
    <button text="Open" image="icon.png" ontap="launch" />
    <button text="CallTree" color="yellow" ontap="callTree" />
  </row>
  <row>
    <button text="All" color="red" ontap="selectAll" />
    <button text="Switch" ontap="switchGo" onhold="switch" />
    <button text="Revert" color="blue" ontap="revert" />
  </row>
  <row>
    <button text="Cut" color="green" ontap="cut" />
    <button text="Same" color="orange" ontap="selectNextSame" />
    <button text="Format" ontap="format" />
  </row>
  <row>
    <button text="Copy" color="blue" ontap="copy" />
    <button text="Paste" color="yellow" ontap="paste" />
  </row>
</layout>